<?xml version="1.0" encoding="utf-8"?>

    <layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orange_gradient_bg"
            android:orientation="vertical"
            android:padding="25dp"
            android:weightSum="15"
            tools:context=".view.activities.SignUpActivity">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="84dp"
                    android:layout_marginRight="170dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo_skoline" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/welcomeLogo"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/fajar" />
            </LinearLayout>

            <id.co.skoline.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="@string/name_info"
                />
            <id.co.skoline.view.custom.CustomEditText
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_shape"
                android:padding="10dp"
                android:hint="@string/name_hint"
                />
            <id.co.skoline.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:text="@string/childName_info"
                />
            <id.co.skoline.view.custom.CustomEditText
                android:id="@+id/childName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_shape"
                android:padding="10dp"
                android:hint="@string/childName_hint"
                />
            <id.co.skoline.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="@string/dob"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/box_shape"
                    android:entries="@array/Day"
                    android:padding="5dp"></Spinner>
                <Spinner
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/box_shape"
                    android:dropDownSelector="@color/colorBlack"
                    android:entries="@array/Months"
                    android:padding="5dp"></Spinner>
                <Spinner
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/box_shape"
                    android:entries="@array/Year"
                    android:padding="5dp"></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/box_shape"
                    android:entries="@array/code"
                    android:padding="5dp">
                </Spinner>
                <id.co.skoline.view.custom.CustomEditText
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_shape"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:hint="@string/number_hint"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/placeholder"
                    android:background="@drawable/boxshape_left"
                    android:padding="10dp"/>
                <id.co.skoline.view.custom.CustomEditText
                    android:id="@+id/location"
                    android:layout_width="270dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:hint="@string/location_hint"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/current_location"
                    android:background="@drawable/boxshape_right"
                    android:padding="5dp"/>
            </LinearLayout>
            <id.co.skoline.view.custom.CustomTextView
                android:id="@+id/locationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="@string/location_info"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <id.co.skoline.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/newspaper_text"/>
                <android.support.v7.widget.SwitchCompat
                    style="@style/SwitchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">
                <id.co.skoline.view.custom.CustomEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/box_shape"
                    android:padding="10dp"
                    android:hint="@string/email_hint"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <id.co.skoline.view.custom.CustomTextView
                    android:id="@+id/terms"
                    android:clickable="true"
                    android:linksClickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"/>
                <android.support.v7.widget.SwitchCompat
                    android:layout_marginTop="24dp"
                    style="@style/SwitchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/boxbutton"
                android:padding="10dp"
                android:onClick="verify"
                android:text="@string/signup_button"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>
    </ScrollView>
</layout>