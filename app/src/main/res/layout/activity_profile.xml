<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/allMenuBackgroung"
            android:orientation="vertical"
            tools:context=".view.activities.ProfileActivity">

            <include
                android:id="@+id/toolbarBinding"
                layout="@layout/toolbar"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimaryDark">

                        <LinearLayout
                            android:padding="15dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/profilePicture"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/fajar"
                                    android:background="@color/colorWhite"/>

                                <ImageView
                                    android:id="@+id/changeProfilePicture"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@android:drawable/ic_menu_camera"
                                    android:layout_gravity="bottom"/>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <id.co.skoline.view.custom.CustomTextView
                                    android:id="@+id/userFullname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="5dp"
                                    app:textStyle="Bold"
                                    android:textColor="@color/colorWhite"
                                    android:layout_gravity="center"/>

                                <id.co.skoline.view.custom.CustomTextView
                                    android:id="@+id/userAge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    app:textStyle="Normal"
                                    android:textColor="@color/colorWhite"
                                    android:layout_gravity="center"/>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/menuOption"
                            android:layout_width="40dp"
                            android:padding="10dp"
                            android:layout_height="70dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/menu" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">
                        <id.co.skoline.view.custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Activities"
                            android:padding="10dp"
                            app:textStyle="Bold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/box_shape" />
                        <lecho.lib.hellocharts.view.PieChartView
                            android:id="@+id/chart"
                            android:padding="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">
                        <id.co.skoline.view.custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Progress"
                            app:textStyle="Bold"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/box_shape" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/box_shape"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/mathTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Mathmatika"
                                android:textColor="@color/colorAccent"
                                app:textStyle="Bold"
                                android:textSize="15sp"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <ProgressBar
                                    android:id="@+id/mathProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/math_progress" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/mathProgress_percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>

                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/englishTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="English"
                                android:textColor="@color/colorPrimaryDark2"
                                app:textStyle="Bold"
                                android:textSize="15sp"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <ProgressBar
                                    android:id="@+id/englishProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/english_progress" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/englishProgress_Percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>

                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/indonesiaTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Indonesia"
                                app:textStyle="Bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <ProgressBar
                                    android:id="@+id/indonesiaProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/indonesia_progress"
                                    android:text="djsj"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/indonesiaProgress_Percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>
                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/ilmuTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="ilmu"
                                android:textSize="15sp"
                                app:textStyle="Bold"
                                android:textColor="@color/PurpleDark" />
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <ProgressBar
                                    android:id="@+id/ilmuProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/ilmu_progress" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/ilmuProgress_percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>
                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/socialTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Social"
                                app:textStyle="Bold"
                                android:textColor="@color/GreenDark"
                                android:textSize="15sp"/>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <ProgressBar
                                    android:id="@+id/socialProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/social_progress" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/socialProgress_Percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>
                            <id.co.skoline.view.custom.CustomTextView
                                android:id="@+id/pendidicanTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Pendidican"
                                app:textStyle="Bold"
                                android:textSize="15sp"
                                android:textColor="@color/colorOrangeDark" />
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <ProgressBar
                                    android:id="@+id/pendidicanProgress"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:progressDrawable="@drawable/pandidikan_progress" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/pendidicanProgress_Percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="40dp"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
</layout>